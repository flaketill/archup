machine_type=$(cat "$__global/explorer/machine_type2")

__package git
__package gvim
__package zsh
__package fish
__package the_silver_searcher

# Install virtualbox guest addition if
case "$machine_type" in
    virtual_by_virtualbox)
        __package virtualbox-guest-modules-arch
        __package virtualbox-guest-utils
    ;;
esac

# Use dash as shell
__package dash
require="__package/dash" \
    __link /bin/sh --source dash --type symbolic
require="__package/dash" \
    __pacman_conf options_NoUpgrade --section options --key NoUpgrade --value usr/bin/sh
require="__package/dash" \
    __pacman_conf options_NoExtract --section options --key NoExtract --value usr/bin/sh
